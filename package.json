{
  "name": "react-motion-slider",
  "version": "0.3.0",
  "description": "Slider/Carousel powered by React Motion.",
  "main": "lib/react-motion-slider.js",
  "scripts": {
    "build": "npm run build:lib && NODE_ENV=production webpack --config webpack.prod.config.js",
    "build:lib": "babel src --out-dir lib --stage 0",
    "dev": "webpack-dev-server --devtool eval --hot --progress --colors",
    "prebuild": "rm -rf dist && mkdir dist",
    "prepublish": "npm run build",
    "postbuild": "NODE_ENV=production TARGET=minify webpack --config webpack.prod.config.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/souporserious/react-motion-slider"
  },
  "keywords": [
    "react",
    "component",
    "slider",
    "carousel"
  ],
  "author": "Travis Arnold <travis@souporserious.com> (http://souporserious.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/souporserious/react-motion-slider/issues"
  },
  "homepage": "https://github.com/souporserious/react-motion-slider",
  "dependencies": {
    "get-prefix": "^1.0.0",
    "is-integer": "^1.0.6",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-motion": "^0.3.0"
  },
  "devDependencies": {
    "alt": "^0.17.3",
    "autoprefixer-loader": "^2.0.0",
    "babel": "^5.8.23",
    "babel-core": "^5.6.15",
    "babel-loader": "^5.2.2",
    "css-loader": "^0.15.1",
    "http-server": "^0.8.0",
    "install": "^0.3.0",
    "node-libs-browser": "^0.5.2",
    "node-sass": "^3.2.0",
    "npm": "^3.5.0",
    "react": "^0.13.3 || ^0.14.0-beta1",
    "react-collapse": "^1.4.0",
    "react-measure": "^0.1.3",
    "sass-loader": "^1.0.2",
    "style-loader": "^0.12.3",
    "webpack": "^1.9.12",
    "webpack-dev-server": "^1.9.0"
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "strict": 0,
      "indent": [2, 2],
      "quotes": [2, "single", "avoid-escape"],
      "linebreak-style": [2, "unix"],
      "semi": [2, "never"],
      "no-multi-spaces": 2,
      "space-before-function-paren": [2, "never"]
    }
  }
}
